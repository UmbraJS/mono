{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "node",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@composables/*": [
        "./composables/*"
      ]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "components/*.vue",
    "components/canvas/*.vue"
  ],
  "exclude": [
    "vite.config.ts",
    "**/*.config.ts",
    "../umbra/**/*"
  ]
}
