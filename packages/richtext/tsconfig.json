{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "exclude": ["./**/__tests__/*"],
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue", "index.ts"],
  "compilerOptions": {
    //...
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
