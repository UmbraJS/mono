{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // ...
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.vue",
    "index.ts",
    "src",
    "components",
    "*.vue"
  ],
  "exclude": [
    "./**/__tests__/*"
  ]
}
