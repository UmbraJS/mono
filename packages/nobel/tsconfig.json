{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.vue",
    "types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/*"
  ]
}
