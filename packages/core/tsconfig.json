{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./engine/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "dist/types",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
